<%= form_with model: @user, url: user_session_path , class: 'session-main', local: true do |f| %>
<h2>ログイン情報</h2>

<%# <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %> 
  <%= render "devise/shared/error_messages", model: f.object%> 

  <div class="field">
   <div class='field-label'>
     <%= f.label :email %><br />
   </div>
  <div class='field-input'>
     <%= f.email_field :email, autofocus: true, autocomplete: "email" ,size: "54"%>
   </div>
  </div>

  <div class="field">
   <div class='field-label'>
     <%= f.label :password %>
    <% if @minimum_password_length %>
     <%= "(英数字6文字以上)"%>
   </div>
     <% end %><br />
   <div class='field-input'>
     <%= f.password_field :password, autocomplete: "current-password",size: "30"%>
   </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログインする" %>
  </div>
<% end %>

 <div class="exit">
   <%= link_to "トップページに戻る", root_path,class: "top-page" %>
 </div>

 <%= render "devise/shared/links" %> 



