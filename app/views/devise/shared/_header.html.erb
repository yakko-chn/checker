<header class="header">

  <div class="header-top">
    <div class="title-name"><a href="/">冷蔵庫管理ツール</a></div>

  <% if user_signed_in? %>
    <div class="user-name">
      <div class = "name">
        <%= "ユーザー名：#{current_user.nickname}さん"%>
      </div>
     <div class="login">
        <%= link_to "マイページ", root_path, class: "mypage"%>
        <%= link_to "ログアウト", destroy_user_session_path, method: :delete ,class: "mypage"%>
     </div>
    </div>
  <% else %>
  <div class="signin">
    <%= link_to "新規登録", new_user_registration_path, class: "post" %>
    <%= link_to "ログイン", new_user_session_path, class: "post" %>
  </div>
  <% end %>
  </div>

</header>